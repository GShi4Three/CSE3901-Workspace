<head>
    <%= stylesheet_link_tag :login, "data-turbo-track": "reload" %>
</head>

<div class="login-container">
  <div class="login-header">
    <h1>Presentation Evaluator</h1>
  </div>

   <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
      <% flash.discard(:notice) %> <!-- Clears the notice -->
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
      <% flash.discard(:notice) %> <!-- Clears the notice -->
    </div>
  <% end %>

  <%= form_with url: '/login', method: :post, local: true, class: "login-form" do |f| %>
    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, placeholder: 'Enter your email', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password, placeholder: 'Enter your password', required: true %>
    </div>
    <%= f.submit 'Sign In', class: 'login-button' %>
  <% end %>

  <a href="/create_account" class="create-account">Create an Account</a>
</div>
