<head>
    <%= stylesheet_link_tag :presentations, "data-turbo-track": "reload" %>
</head>

 <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
      <% flash.discard(:notice) %> <!-- Clears the notice -->
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
      <% flash.discard(:notice) %> <!-- Clears the notice -->
    </div>
  <% end %>
<div class="presentations-container">
  <h1>Presentations</h1>
    <div class="presentation-cards">
      <% @presentations.each do |presentation| %>
        <div class="card">
          <img src="<%= presentation.image || 'https://placehold.co/400x300' %>" alt="Presentation Image">
          <p class="card-title"><%= presentation.name || 'N/A'%></p>
          <p class="card-score">Score: <strong><%= presentation.score || 'N/A' %></strong></p>
          <p class="card-presenters">By: <%= presentation.users.map(&:name).join(', ') %></p>
        </div>
      <% end %>
    </div>
</div>
