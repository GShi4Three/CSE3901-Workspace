<head>
    <%= stylesheet_link_tag :evaluations, "data-turbo-track": "reload" %>
</head>

<div>
   <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
      <% flash.discard(:notice) %> 
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
      <% flash.discard(:alert) %> 
    </div>
  <% end %>
</div>
<div class="ta-evaluations-container">
  <!-- Top Section: Presentation Details and Average Scores -->
  <div class="top-section">
    <!-- Left: Presentation Details -->
    <div class="presentation-details">
    <img src="https://placehold.co/800x600" alt="Presentation Image" class="presentation-image">
      <h1 class="presentation-title">Presentation Title</h1>
      <p class="presentation-presenters">
        <strong>Presenters:</strong> John Doe, Jane Smith
      </p>
    </div>

    <!-- Right: Average Scores -->
    <div class="average-scores">
      <h2>Average Scores</h2>
      <div class="score">
        <p><strong>Content:</strong> 8.5</p>
        <p><strong>Organization:</strong> 9.0</p>
        <p><strong>Time & Pacing:</strong> 8.2</p>
        <p><strong>Professionalism:</strong> 9.3</p>
        <h2> Total Score: 8.75</h2>
      </div>
    </div>
  </div>

  <!-- Bottom Section: Student Evaluations -->
  <div class="student-evaluations">
    <h2>Student Evaluations</h2>
    <% 5.times do |i| %>
      <div class="student-card">
        <p><strong>Student Name:</strong> Student <%= i + 1 %></p>
        <p><strong>Content:</strong> <%= rand(6..10) %>/10</p>
        <p><strong>Organization:</strong> <%= rand(6..10) %>/10</p>
        <p><strong>Time & Pacing:</strong> <%= rand(6..10) %>/10</p>
        <p><strong>Professionalism:</strong> <%= rand(6..10) %>/10</p>
        <p><strong>Comments:</strong> This presentation was engaging and well-organized.</p>
      </div>
    <% end %>
  </div>
</div>
